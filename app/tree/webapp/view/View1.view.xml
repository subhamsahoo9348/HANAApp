<mvc:View controllerName="tree.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:dnd="sap.ui.core.dnd"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
        <Tree id="tree" items="{path: '/data'}" width="100%" mode="MultiSelect">
        <headerToolbar>
        <OverflowToolbar >
        <Bar >
       <contentLeft>
       <Button icon="sap-icon://add" press="onPressAdd"></Button>
       <Button icon="sap-icon://edit" press="onPressEdit"></Button>
       <Button icon="sap-icon://delete" press="onPressDelete"></Button>
       </contentLeft>
        </Bar>
        </OverflowToolbar>
        </headerToolbar>
        <dragDropConfig>
					<dnd:DragDropInfo
							sourceAggregation="items"
							targetAggregation="items"
							dragStart="onDragStart"
							drop="onDrop"/>
		</dragDropConfig>
			<StandardTreeItem title="{DESCRIPTION}" type="Active" />
		</Tree>
        </content>
    </Page>
</mvc:View>
